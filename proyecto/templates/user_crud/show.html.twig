{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>
<div class="container h-100">
        <div class="row h-100 justify-content-center align-items-center">
            <div class="col-12 bg-white rounded my-3 p-5">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Baneado</th>
                <td>{{ user.baneado ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ user.nombre }}</td>
            </tr>
        </tbody>
    </table>

    <a class="mr3" href="{{ path('app_user_crud_index') }}">Volver</a>

    <a class="mr3" href="{{ path('app_user_crud_edit', {'id': user.id}) }}">Editar</a>

    {{ include('user_crud/_delete_form.html.twig') }}
    </div>
            </div>
        </div>
{% endblock %}
